@model IEnumerable<IMDB.Models.MovieModel>

@{
    ViewBag.Title = "Movie";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plot)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.producerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfRelease)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plot)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.producerName)
        </td>
        <td>
            <div class="profile-table-img">
                <img src="@Url.Content("~/uploads/"+ item.Poster)" style="height:50px;width:50px">
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Create", new { id = item.ID }) |

            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
    }

</table>
